<main>
    <form class="register-form" action="/register" method="post">
        <div class="container">
            <h1 class="title">Register</h1>

            <div class="input-container">
                <input type="text" placeholder="Username" name="username" required value="{{body.username}}"  class="input">
            </div>

            <div class="input-container">
                <input type="password" placeholder="Password" name="password" required class="input">
            </div>

            <button type="submit" class="registerbtn btn">Register</button>
        </div>

        <div class="container signin">
            <p>Already have an account? <a href="/login">Sign in</a>.</p>
        </div>
    </form>
</main>